{
  "version": "0.2.0",
  "configurations": [
      {
          "type": "chrome",
          "request": "attach",
          "name": "Attach to Chrome",
          "port": 4200,
          "webRoot": "${workspaceRoot}"
      },
      {
          "name": "Launch Chrome against localhost, with sourcemaps",
          "type": "chrome",
          "request": "launch",
          "url": "http://localhost:4200",
          "sourceMaps": true,
          "webRoot": "${workspaceRoot}"
      },
      { 
          "name": "Attach to Chrome, with sourcemaps",
          "type": "chrome",
          "request": "attach",
          "port": 4200,
          "sourceMaps": true,
          "webRoot": "${workspaceRoot}"
      }
  ]
}